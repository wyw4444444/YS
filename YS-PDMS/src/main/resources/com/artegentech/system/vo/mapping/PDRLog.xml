<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artegentech.system.dao.IPDRLogDAO">
	<cache />
	<select id="findById" resultType="PDRLog" parameterType="String">
		SELECT * FROM tblpdr_log WHERE PDR_id=#{PDR_id};
	</select>
	
	<select id="findLastById" resultType="PDRLog" parameterType="String" flushCache="true">
		SELECT * FROM tblpdr_log WHERE PDR_id=#{PDR_id} 
		ORDER BY no DESC 
		LIMIT 1;
	</select>
	
	<insert id="doCreate" parameterType="PDRLog">
		INSERT INTO tblpdr_log(PDR_id,member_id,reg_time,log) 
		VALUES(#{PDR_id},#{member_id},#{reg_time},#{log});
	</insert>
	
	<delete id="removeByno" parameterType="Integer">
		DELETE FROM tblpdr_log WHERE  no=#{no} ;
	</delete>
	
	<update id="doUpdate" parameterType="PDRLog">
		UPDATE tblpdr_log SET log=#{log},reg_time=#{reg_time}
		WHERE no=#{no};
	</update>
	
</mapper>