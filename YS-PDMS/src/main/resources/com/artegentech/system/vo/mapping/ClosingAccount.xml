<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.artegentech.system.dao.IClosingAccountDAO">
	<cache />
	<insert id="doCreate" parameterType="ClosingAccount" useGeneratedKeys="true" keyProperty="closing_id">
		INSERT INTO tblclosing_account(closing_id,closing_date,member_id) VALUES(#{closing_id},#{closing_date},#{member_id});
	</insert>
	<select id="findById" resultType="ClosingAccount" parameterType="Integer">
		SELECT closing_id,closing_date,member_id FROM tblclosing_account WHERE closing_id=#{closing_id};
	</select>
	<select id="findAll" resultType="ClosingAccount">
		SELECT closing_id,closing_date,member_id FROM tblclosing_account;
	</select>
	<select id="findLatestClosingAccount" resultType="ClosingAccount">
		SELECT closing_id,closing_date,member_id FROM tblclosing_account ORDER BY closing_id DESC LIMIT 1;
	</select>
	<select id="findAllSplit" parameterType="java.util.Map" resultType="ClosingAccount">
		SELECT closing_id,closing_date,member_id FROM tblclosing_account
		ORDER BY closing_id ASC
		LIMIT #{start},#{lineSize};
	</select>
	<select id="getAllCount" resultType="Long">
		SELECT COUNT(*) FROM tblclosing_account;
	</select>
</mapper>